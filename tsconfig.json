{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext",
      "esnext.asynciterable"
    ],
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "target": "esnext",
    "outDir": "build",
  },
  "exclude": [
    "node_modules",
    "test"
  ],
  "rules": {
    "no-unused-vars": "off"
  }
}